<UserControl x:Class="Cyberminds57.BorderedText"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    <Grid Name="grid">
        <TextBlock Margin="-1 -1 0 0" Foreground="Black" TextOptions.TextHintingMode="Animated"/>
        <TextBlock Margin="-1 0 0 0" Foreground="Black" TextOptions.TextHintingMode="Animated"/>
        <TextBlock Margin="-1 1 0 0" Foreground="Black" TextOptions.TextHintingMode="Animated"/>
        <TextBlock Margin="1 -1 0 0" Foreground="Black" TextOptions.TextHintingMode="Animated"/>
        <TextBlock Margin="1 0 0 0" Foreground="Black" TextOptions.TextHintingMode="Animated"/>
        <TextBlock Margin="1 1 0 0" Foreground="Black" TextOptions.TextHintingMode="Animated"/>
        <TextBlock  TextOptions.TextHintingMode="Animated"/>
    </Grid>
</UserControl>
